<Window
    x:Class="FTPServer.DesktopClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="FTP Server"
    Height="350"
    Width="525"
    WindowStyle="None"
    AllowsTransparency="True"
    WindowState="Normal"
    MouseDoubleClick="Window_MouseDoubleClick"
    ResizeMode="NoResize"
    xmlns:ftpserver_desktopclient="clr-namespace:FTPServer.DesktopClient">
    <Border
        BorderThickness="1"
        BorderBrush="#FF2B579A">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="30" />
                <RowDefinition
                    Height="*" />
                <RowDefinition
                    Height="25" />
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#FF2B579A"
                MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                <TextBlock
                    FontFamily="Segoe UI"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ftpserver_desktopclient:MainWindow}}}"
                    Margin="10,0,0,0"
                    FontSize="15"
                    Foreground="White" />

