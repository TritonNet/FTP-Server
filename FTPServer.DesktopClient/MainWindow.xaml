                    <ContentControl
                        Margin="4"
                        Style="{StaticResource minimizeIconStyle}" />
                </telerik:RadButton>-->
            </Grid>

            <Grid
                Grid.Row="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#FFD8D8D8">
                <TextBlock
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="10,0,10,0"
                    Text="{Binding Path=CopyrightMessage,Mode=OneWay}"
                    FontSize="9"
                    FontFamily="Segoe UI" />
            </Grid>
        </Grid>
    </Border>
